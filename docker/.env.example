# mDNS-DNS Proxy Docker Compose Environment Variables
# Copy this file to .env and customize as needed

# Server Configuration
# IP address to bind the DNS server to (0.0.0.0 = all interfaces)
MDNS_DNS_PROXY_BIND_ADDRESS=0.0.0.0

# Port to bind the DNS server to
MDNS_DNS_PROXY_PORT=5335

# Cache Configuration
# Cache TTL (time-to-live) in seconds
MDNS_DNS_PROXY_CACHE_TTL=120

# Disable caching (set to true to disable)
MDNS_DNS_PROXY_NO_CACHE=false

# Logging Configuration
# Log level: trace, debug, info, warn, error
MDNS_DNS_PROXY_LOG_LEVEL=info

# mDNS Query Configuration
# Service query timeout in milliseconds (PTR/SRV/TXT queries)
MDNS_DNS_PROXY_SERVICE_QUERY_TIMEOUT=1000

# Hostname resolution timeout in milliseconds (A/AAAA queries)
MDNS_DNS_PROXY_HOSTNAME_RESOLUTION_TIMEOUT=1000
